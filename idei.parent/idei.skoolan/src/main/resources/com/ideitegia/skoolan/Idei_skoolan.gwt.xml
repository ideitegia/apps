<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='idei_skoolan'>
	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User'/>
	<inherits name='com.google.gwt.uibinder.UiBinder' />
	<inherits name="com.google.gwt.i18n.I18N" />

	<!-- Other module inherits -->
	<inherits name='com.ideitegia.common.Idei_common' />
	<inherits name='com.ideitegia.entity.Idei_entity' />
	<inherits name='com.ideitegia.scheduler.Idei_scheduler' />

	<!-- Inherit the default GWT style sheet. You can change -->
	<!-- the theme of your GWT application by uncommenting -->
	<!-- any one of the following lines. -->
	<!-- -->
	<inherits name='com.google.gwt.user.theme.clean.Clean' />
	<!-- 
	<inherits name='com.google.gwt.user.theme.standard.Standard'/> 
	<inherits name='com.google.gwt.user. theme.chrome.Chrome'/> 
	<inherits name='com.google.gwt.user.theme.dark.Dark'/>
	-->

	<!-- Euskera language, independent of country -->
	<extend-property name="locale" values="eus" />
	<!-- English language, independent of country -->
	<extend-property name="locale" values="en" />
	<!-- Spanish language, independent of country -->
	<extend-property name="locale" values="es" />
	
	<!--  
	-->
	<extend-property name="locale" values="es_ES" />
	<set-property-fallback name="locale" value="es_ES"/>
	<set-configuration-property name="locale.useragent" value="Y" />

	<!-- Specify the app entry point class. -->
	<entry-point class='com.ideitegia.skoolan.client.Idei_skoolan' />

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />
  
	<set-property name="user.agent" value="gecko1_8" />
	<!--  if enabled, gwt-dnd make the compilation crash
	<extend-property name="user.agent" values="ie6" />
	-->
	<extend-property name="user.agent" values="ie8" />
	<extend-property name="user.agent" values="ie9" fallback-value="ie8" />
	<extend-property name="user.agent" values="ie10" />
	<extend-property name="user.agent" values="safari" />
	<extend-property name="user.agent" values="opera" />
	
	<!-- ONLY FOR DOVELOPMENT   -   REDUCES COMPILATION TIME BUT NO OPTIMIZATION IS APPLIED -->
	<collapse-all-properties />
	<!--  
	-->
</module>
